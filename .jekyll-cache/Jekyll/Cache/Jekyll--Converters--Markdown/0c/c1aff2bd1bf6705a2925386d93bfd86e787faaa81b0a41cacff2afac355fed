    <span class="n">printf</span><span class="p">(</span><span class="s">"PARENT: PID = %d GID = %d</span><span class="se">\n</span><span class="s">"</span><span class="p">,</span> <span class="n">getpid</span><span class="p">(),</span> <span class="n">getpgrp</span><span class="p">());</span>
